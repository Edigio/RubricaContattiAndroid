<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivContatto"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_margin="@dimen/item_lv_contatti_padding"
        android:maxHeight="90dp"
        android:adjustViewBounds= "true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNome"
        tools:text="Nome"
        android:textSize="@dimen/activity_dettaglio_size_testo"
        android:padding="@dimen/item_lv_contatti_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCognome"
        tools:text="Cognome"
        android:textSize="@dimen/activity_dettaglio_size_testo"
        android:padding="@dimen/item_lv_contatti_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvTelefono"
        tools:text="Telefono"
        android:textSize="@dimen/activity_dettaglio_size_testo"
        android:padding="@dimen/item_lv_contatti_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvEmail"
        tools:text="Email"
        android:textSize="@dimen/activity_dettaglio_size_testo"
        android:padding="@dimen/item_lv_contatti_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCancella"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/cancella_contatto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>